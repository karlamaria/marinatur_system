<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<div id="events_calendar">
  <%= render partial: "calendar", locals: {events: @events} %>
</div>

<%= link_to 'New Job', new_job_path %>  

<table>
  <thead>
    <tr>
      <th>Vehicle</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Customer</th>
      <th>Status</th>
      <th>Price</th>
      <th>Responsible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.vehicle %></td>
        <td><%= job.start_date %></td>
        <td><%= job.end_date %></td>
        <td><%= job.customer %></td>
        <td><%= job.status %></td>
        <td><%= job.price %></td>
        <td><%= job.responsible %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
